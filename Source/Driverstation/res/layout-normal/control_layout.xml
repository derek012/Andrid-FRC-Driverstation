<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/control_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF000000" >

        <VideoView
        android:id="@+id/video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:focusable="false"
        android:clickable="false" />
        
        
    <com.example.driverstation.Joystick
        android:id="@+id/joystick1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:clickable="true" />

    <TextView
        android:id="@+id/control_log"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignBottom="@+id/run_mode"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:lines="100"
        android:text=""
        android:textColor="#00000000"
        android:textAlignment="viewStart" />

    <RadioGroup
        android:id="@+id/run_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
      >

        <RadioButton
            android:id="@+id/run_teleop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="TeleOperated"
            android:textColor="#F0F0F0"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/run_autonomous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Autonomous"
            android:textColor="#F0F0F0"
            android:textSize="20dp" />
    </RadioGroup>

    <ToggleButton
        android:id="@+id/enable_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#00000000"
        android:textColor="#FFFF0000"
        android:textOff="Disabled"
        android:textOn="Enabled"
        android:textSize="40sp" />

    <com.example.driverstation.Joystick
        android:id="@+id/joystick2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/joystick1" />

    <GridLayout
        android:id="@+id/buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
		android:layout_alignParentBottom="true"
        android:columnCount="2" >

        <Button
            android:id="@+id/Button1"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#50606060"
            android:text="1"
            android:textColor="#E6E6E6" />

        <Button
            android:id="@+id/Button2"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#50606060"
            android:text="2"
            android:textColor="#E6E6E6" />

        <Button
            android:id="@+id/Button3"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#50606060"
            android:text="3"
            android:textColor="#E6E6E6" />

        <Button
            android:id="@+id/Button4"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#50606060"
            android:text="4"
            android:textColor="#E6E6E6" />

        <Button
            android:id="@+id/Button5"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#50606060"
            android:text="5"
            android:textColor="#E6E6E6" />

        <Button
            android:id="@+id/Button6"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#50606060"
            android:text="6"
            android:textColor="#E6E6E6" />

        <Button
            android:id="@+id/Button7"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#50606060"
            android:text="7"
            android:textColor="#E6E6E6" />

        <Button
            android:id="@+id/Button8"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#50606060"
            android:text="8"
            android:textColor="#E6E6E6" />
    </GridLayout>

</RelativeLayout>